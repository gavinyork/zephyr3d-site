{
  "name": "@zephyr3d/site",
  "version": "0.0.1",
  "description": "zephyr3d document site",
  "homepage": "https://github.com/gavinyork/zephyr3d#readme",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gavinyork/zephyr3d.git"
  },
  "scripts": {
    "build:doc": "node build-doc.js 2>&1",
    "build:showcase": "cross-env NODE_OPTIONS=--max_old_space_size=8192 rollup -c rollup.config.showcase.mjs --silent",
    "build:copy": "shx mkdir -p dist && shx cp -R web dist && npm run build:showcase",
    "build:web": "npm run build:copy && cross-env NODE_OPTIONS=--max_old_space_size=8192 rollup -c --silent && shx cp -R assets dist/web/tut",
    "build:site": "shx rm -rf dist && shx rm -f .buildcache.json && shx rm -f .buildcache.tmp.json && npm run build:web && npm run build:doc",
    "build:check": "tsc -p . --noEmit",
    "lint": "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint \"src/**/*.ts\" -f compact",
    "lint-fix": "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint --fix \"src/**/*.ts\" -f compact",
    "serve": "web-dev-server --no-cache --watch --open dist/web/index.html"
  },
  "engines": {
    "node": ">=16.18.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.34.4",
    "@microsoft/api-documenter": "^7.21.6",
    "yargs": "^17.7.1",
    "cross-spawn": "^7.0.3",
    "chalk": "^5.2.0",
    "@web/dev-server": "^0.1.35",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-node-resolve": "~16.0.0",
    "@rollup/plugin-strip": "~3.0.4",
    "@rollup/plugin-terser": "~0.4.4",
    "@rollup/plugin-commonjs": "~28.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-import-css": "~3.5.8",
    "@rollup/pluginutils": "~5.1.4",
    "rollup": "~4.30.1",
    "rollup-plugin-dts": "~6.1.1",
    "rollup-plugin-copy": "^3.4.0",
    "@swc/core": "^1.3.62",
    "rollup-plugin-swc3": "~0.12.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "eslint-plugin-tsdoc": "^0.2.17",
    "@typescript-eslint/parser": "^8.17.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "replace": "^1.2.2",
    "run-script-os": "^1.1.6",
    "shx": "^0.3.4",
    "cross-env": "^7.0.3",
    "typescript": "^5.7.3",
    "tslib": "^2.8.1"
  },
  "dependencies": {
    "@types/diff": "^5.0.2",
    "@webgpu/types": "^0.1.62",
    "@types/draco3d": "^1.4.9",
    "draco3d": "^1.5.7",
    "diff": "^5.0.0",
    "highlight.js": "^11.8.0",
    "bootstrap": "^5.3.1",
    "lil-gui": "^0.19.2",
    "@zip.js/zip.js": "^2.7.54",
    "@popperjs/core": "^2.11.8",
    "@zephyr3d/base": "workspace:*",
    "@zephyr3d/device": "workspace:*",
    "@zephyr3d/scene": "workspace:*",
    "@zephyr3d/imgui": "workspace:*",
    "@zephyr3d/backend-webgl": "workspace:*",
    "@zephyr3d/backend-webgpu": "workspace:*"
  }
}
